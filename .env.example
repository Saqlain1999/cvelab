# Database Configuration (REQUIRED)
DATABASE_URL=postgresql://cveuser:cvepass@localhost:5432/cve_lab_db

# Server Configuration
PORT=5000
NODE_ENV=development

# Authentication (REQUIRED for production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# External API Keys (Optional - enhance functionality)
GITHUB_TOKEN=ghp_your_github_token_here
GOOGLE_API_KEY=your_google_api_key_here
VULNCHECK_API_KEY=your_vulncheck_api_key_here

# Rate Limiting Configuration (Optional - defaults provided)
RATE_LIMIT_DEFAULT_RPS=2
RL_GITHUB_RPS=10
RL_GITLAB_RPS=10
RL_DOCKERHUB_RPS=5
RL_BING_RPS=1
RL_RSS_RPS=5

# Email Configuration (WHM SMTP Server)
SMTP_HOST=your-whm-server.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@domain.com

# Stripe Configuration (For billing - production only)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_PRO=price_your_pro_price_id
STRIPE_PRICE_PREMIUM=price_your_premium_price_id

# Sentry (Error tracking - optional)
SENTRY_DSN=your_sentry_dsn_here

# Redis (Caching - optional)
REDIS_URL=redis://localhost:6379

# Deployment
APP_URL=http://localhost:5000
FRONTEND_URL=http://localhost:5173
